<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="msal" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <Label  text="{{ hello }}" textWrap="true" id="label" />
            <Button text="Login" tap="{{ login }}" class="btn btn-primary" visibility="{{ hello ? 'collapsed' : 'visible' }}"/>
            <Button id="logoutBtn" text="Logout" tap="{{ logout }}" class="btn btn-primary"  visibility="{{ hello ? 'visible' : 'collapsed' }}"/>

          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>